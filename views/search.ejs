        <script>
          function sendTopic(topic) {
            let chatBox = document.getElementById('chatBox');
            let botMessage = document.createElement('div');
            botMessage.className = 'message bot-message';
        
            if (topic === 'DÃºvidas') {
              botMessage.innerHTML = `Escolha uma das opÃ§Ãµes abaixo para mais informaÃ§Ãµes...`;
            } else if (topic === 'Manuais') {
              botMessage.innerHTML = `Escolha um manual para baixar...`;
            } else {
              botMessage.textContent = `VocÃª escolheu o tÃ³pico: ${topic}.`;
            }
        
            chatBox.appendChild(botMessage);
            chatBox.scrollTop = chatBox.scrollHeight;
          }
        
          function sendMessage() {
            let userInput = document.getElementById('userInput').value;
            if (userInput.trim().toLowerCase() === 'sap') {
              sendManualSAP();
            } else {
              let chatBox = document.getElementById('chatBox');
              let userMessage = document.createElement('div');
              userMessage.className = 'message user-message';
              userMessage.textContent = userInput;
              chatBox.appendChild(userMessage);
              chatBox.scrollTop = chatBox.scrollHeight;
              document.getElementById('userInput').value = ''; // Limpar o campo
            }
          }
        
          function sendManualSAP() {
            let chatBox = document.getElementById('chatBox');
            let botMessage = document.createElement('div');
            botMessage.className = 'message bot-message';
            botMessage.innerHTML = `
              Escolha um manual para baixar:<br><br>
